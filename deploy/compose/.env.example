# Server
ADDR=:8090

# PostGIS
POSTGRES_DB=gis
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
PG_SCHEMA=shakir

# GeoServer
GEOSERVER_PORT=8080

# Kafka
KAFKA_CLUSTER_ID=abcdefghijklmnopqrstuvwxyz
KAFKA_GROUP_ID=cache-invalidator

# App-level
GEOSERVER_URL=http://localhost:8080/geoserver
REDIS_ADDR=localhost:6379
# Use 29092 for local run, and 9092 for Docker
KAFKA_BROKERS=localhost:29092
KAFKA_TOPIC=spatial-updates

# Build metadata
BUILD_VERSION=dev
BUILD_REVISION=
BUILD_BRANCH=
BUILD_DATE=

# Logging
LOG_CONSOLE=false
LOG_SAMPLE_N=0
LOG_HOTNESS_SAMPLE=0.01
LOG_LEVEL=debug

# Hotness
HOT_THRESHOLD=10
HOT_HALF_LIFE=1m

# Features
FEATURES_GML_STREAMING=false
FEATURES_BASELINE_STREAM_UPSTREAM=false

# Caching
CACHE_OP_TIMEOUT=250ms
CACHE_TTL_DEFAULT=60s
CACHE_TTL_OVERRIDES=demo:NR_polygon=2m,roads=30s
CACHE_FILL_MAX_WORKERS=8
CACHE_FILL_QUEUE=64

# Invalidation
INVALIDATION_ENABLED=true
INVALIDATION_DRIVER=kafka

# H3
H3_RES=8
H3_RES_MIN=8
H3_RES_MAX=8
# If empty, producers get parent resolution from H3_RES-1
H3_PARTITION_RES=

# Metrics
METRICS_ENABLED=true
METRICS_ADDR=:9100
METRICS_PATH=/metrics

# Senario
SCENARIO=cache

# Adaptive engine
ADAPTIVE_ENABLED=true
ADAPTIVE_DRY_RUN=false
ADAPTIVE_SEED=1
ADAPTIVE_SERVE_ONLY_IF_FRESH=false
ADAPTIVE_TTL_COLD=30s
ADAPTIVE_TTL_WARM=60s
ADAPTIVE_TTL_HOT=120s

# Prometheus test (experiment-runner)
PROM_URL=http://localhost:9090

# Hit events
HIT_EVENTS_ENABLED="true"
HIT_EVENTS_TOPIC="spatial-hit-events"
HIT_EVENTS_BROKERS="localhost:29092"
